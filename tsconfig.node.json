{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["es6", "dom"],
    "noImplicitAny": true,
    "moduleResolution": "node",
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "built/",
    "rootDir": "./",
    "sourceMap": true
  },
  "include": ["tools/**/*.ts"],
  "exclude": ["scripts/**/*", "node_modules"]
}

{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "outDir": "built/",
    "sourceMap": true
  },
  "include": ["tools/**/*.ts", "config.ts"],
  "exclude": [
    "*.ts",
    "scripts/**/*.ts",
    "node_modules/**/*.ts",
    "functions/**/*.ts"
  ]
}

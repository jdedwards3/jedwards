{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "lib": ["es6", "dom"],
    "module": "esnext",
    "target": "ES6",
    "sourceMap": true,
    "sourceRoot": "/scripts",
    "inlineSources": true,
    "outDir": "built/dist",
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": ["scripts/**/*"],
  "exclude": ["*.ts", "tools/**/*", "node_modules/**/*", "functions/**/*"]
}
